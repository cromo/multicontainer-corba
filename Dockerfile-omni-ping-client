FROM python:2
MAINTAINER Cristian Romo "cristian.g.romo@gmail.com"

RUN apt-get update && \
  apt-get install \
    omniidl \
    omniidl-python \
    python-omniorb \
    -y && \
  rm -rf /var/lib/apt/lists/*
RUN cp -r /usr/lib/python2.7/dist-packages/* /usr/local/lib/python2.7/site-packages
ADD Ping.idl Ping.idl
ADD omni-ping-client.py client.py

CMD ["python", "client.py", "-ORBInitRef", "NameService=corbaloc:iiop:nameservice:2809/NameService"]